# Título: Simulação Final - Digital Twin para Manutenção Preditiva
import control as ct
import numpy as np
import matplotlib.pyplot as plt

# 1. MODELAGEM (O Gêmeo Digital)
# Modelo nominal do motor: G(s) = K / (s + a)
K_nom = 1.0
a_nom = 2.0
G_twin = ct.tf([K_nom], [1, a_nom])

# 2. SIMULAÇÃO DA PLANTA FÍSICA (Com desgaste progressivo)
# Vamos simular o tempo passando. A partir de t=15s, o atrito do motor aumenta (defeito).
t = np.linspace(0, 30, 600)
u = np.ones_like(t) * 10 # Entrada degrau (10V)

y_real = []
y_twin = []

# Loop de simulação em tempo "real"
# Estado inicial
x_real = 0
x_twin = 0
dt = t[1] - t[0]

a_real = 2.0 # Valor inicial correto

for i in range(len(t)):
    # A partir de 15s, o parametro 'a' da planta real começa a mudar (desgaste)
    if t[i] > 15:
        a_real = 2.0 + (t[i] - 15) * 0.1 # Aumenta progressivamente

    # Equação diferencial discretizada (Euler simples para simulação)
    # Planta Real (sofrendo desgaste)
    dx_real = -a_real * x_real + K_nom * u[i]
    x_real = x_real + dx_real * dt
    
    # Adicionando ruído de sensor na leitura real
    ruido = np.random.normal(0, 0.05)
    y_real.append(x_real + ruido)

    # Gêmeo Digital (Roda com o modelo nominal perfeito)
    dx_twin = -a_nom * x_twin + K_nom * u[i]
    x_twin = x_twin + dx_twin * dt
    y_twin.append(x_twin)

# 3. ANÁLISE DE DADOS E DETECÇÃO DE FALHAS
y_real = np.array(y_real)
y_twin = np.array(y_twin)
residuo = np.abs(y_real - y_twin)

# Plotagem
plt.figure(figsize=(12, 8))

plt.subplot(2, 1, 1)
plt.plot(t, y_real, 'b', alpha=0.6, label='Leitura Sensor (Planta Real)')
plt.plot(t, y_twin, 'r--', linewidth=2, label='Digital Twin (Modelo Nominal)')
plt.axvline(15, color='k', linestyle=':', label='Início do Desgaste')
plt.title('Monitoramento em Tempo Real: Planta vs Digital Twin')
plt.ylabel('Velocidade (rad/s)')
plt.legend()
plt.grid()

plt.subplot(2, 1, 2)
plt.plot(t, residuo, 'g')
plt.axhline(0.5, color='r', linestyle='--', label='Limiar de Alerta')
plt.title('Resíduo (Diferença) - Detecção de Anomalia')
plt.xlabel('Tempo (s)')
plt.ylabel('Erro Absoluto')
plt.legend()
plt.grid()

plt.tight_layout()
plt.show()

print("CONCLUSÃO DA SIMULAÇÃO:")
print("Até t=15s, o Digital Twin segue a planta perfeitamente (resíduo baixo).")
print("Após t=15s, o desgaste físico altera a dinâmica da planta.")
print("O Digital Twin detecta a divergência instantaneamente, permitindo agendar manutenção antes da quebra.")
